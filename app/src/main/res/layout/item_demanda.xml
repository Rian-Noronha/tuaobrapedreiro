<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:background="@drawable/background_demanda"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txtTituloDemanda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="@string/titulo_demanda"
            android:textColor="@color/colorBlack"
            android:textSize="24sp"
            android:textStyle="bold"
            app:drawableStartCompat="@drawable/ic_preview_demanda_black_24dp"
            app:layout_constraintBottom_toTopOf="@+id/txtTrabalhoASerFeito"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintVertical_chainStyle="packed">
        </TextView>

        <TextView
            android:id="@+id/txtTrabalhoASerFeito"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textColor="@color/colorBlack"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/txtHorarioPublicacao"
            app:layout_constraintEnd_toEndOf="@id/txtTituloDemanda"
            app:layout_constraintStart_toStartOf="@id/txtTituloDemanda"
            app:layout_constraintTop_toBottomOf="@+id/txtTituloDemanda"
            app:layout_constraintVertical_bias="0.5"
            tools:text="Trabalho a Ser Feito">
        </TextView>

        <TextView
            android:id="@+id/txtHorarioPublicacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/txtLocalizacao"
            app:layout_constraintEnd_toEndOf="@id/txtTrabalhoASerFeito"
            app:layout_constraintStart_toStartOf="@id/txtTrabalhoASerFeito"
            app:layout_constraintTop_toBottomOf="@+id/txtTrabalhoASerFeito"
            app:layout_constraintVertical_bias="0.5"
            tools:text="HÃ¡ x hora(s)">
        </TextView>

        <TextView
            android:id="@+id/txtLocalizacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:textSize="18sp"
            app:drawableStartCompat="@drawable/ic_locaiton_demanda_black_24dp"
            app:layout_constraintEnd_toEndOf="@id/txtHorarioPublicacao"
            app:layout_constraintStart_toStartOf="@id/txtHorarioPublicacao"
            app:layout_constraintTop_toBottomOf="@+id/txtHorarioPublicacao"
            app:layout_constraintVertical_bias="0.5"
            tools:text="A x km - Lugar - (Cidade)">
        </TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>