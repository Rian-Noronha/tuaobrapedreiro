<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_sheet_contato_cliente"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/contato_cliente"
        android:textSize="24sp"
        android:textStyle="bold">
    </TextView>

    <TextView
        android:id="@+id/txtNomeCliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        tools:text="Nome"
        app:drawableStartCompat="@drawable/ic_person_black_24dp"
        >
    </TextView>


    <TextView
        android:id="@+id/txtEmailCliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        tools:text="xxxx@xxxxx.xxx"
        app:drawableStartCompat="@drawable/ic_mail_black_24dp"
        >
    </TextView>


    <TextView
        android:id="@+id/txtContatoCliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="@string/contato_cliente"
        app:drawableStartCompat="@drawable/ic_contato_black_24dp"
        tools:text="Contato"
        >
    </TextView>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/telefone_validado"
        android:textSize="18sp"
        app:drawableStartCompat="@drawable/ic_verified_black_24dp"
        >
    </TextView>


</LinearLayout>